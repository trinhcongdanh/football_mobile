// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "rootDirs": [
      "src"
    ],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
  ],
    "paths": {
      "@football/app": [
        "./src/app"
      ],
      "@football/app/*": [
        "./src/app/*"
      ],
      "@football/core": [
        "./src/core"
      ],
      "@football/core/*": [
        "./src/core/*"
      ],
      "@screen": [
        "./src/app/screens"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "modules"
  ]
}
